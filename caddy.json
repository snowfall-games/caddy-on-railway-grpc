{
  "apps": {
    "http": {
      "servers": {
        "main": {
          "listen": [":${PORT}"],
          "logs": {
            "default_logger_name": "http_server",
            "logger_names": {
              "http_server": "http_server"
            }
          },
          "routes": [
            {
              "match": [
                {
                  "path": ["/health"]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "status_code": 200,
                  "body": "OK"
                }
              ]
            },
            {
              "match": [
                {
                  "header": {
                    "Content-Type": ["application/grpc"]
                  }
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "versions": ["h2c"]
                  },
                  "upstreams": [
                    {
                      "dial": "${HORDE_HOST}:5002"
                    }
                  ]
                }
              ]
            },
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "${HORDE_HOST}:5000"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "layer4": {
      "servers": {
        "tcp_proxy": {
          "listen": [":8080"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "proxy",
                  "upstreams": [
                    {
                      "dial": "${HORDE_HOST}:8080"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "logging": {
      "logs": {
        "default": {
          "writer": {
            "output": "stdout"
          },
          "encoder": {
            "format": "console"
          },
          "level": "DEBUG"
        },
        "http_server": {
          "writer": {
            "output": "stdout"
          },
          "encoder": {
            "format": "console"
          },
          "level": "DEBUG"
        }
      }
    }
  }
}
