{
  "apps": {
    "http": {
      "servers": {
        "main": {
          "listen": [":${PORT}"],
          "automatic_https": {
            "disable_redirects": true
          },
          "routes": [
            {
              "match": [
                {
                  "path": ["/health"]
                }
              ],
              "handle": [
                {
                  "handler": "static_response",
                  "status_code": 200,
                  "body": "OK"
                }
              ]
            },
            {
              "match": [
                {
                  "header": {
                    "Content-Type": ["application/grpc"]
                  }
                }
              ],
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "transport": {
                    "protocol": "http",
                    "versions": ["h2c"]
                  },
                  "upstreams": [
                    {
                      "dial": "${HORDE_HOST}:5002"
                    }
                  ]
                }
              ]
            },
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "upstreams": [
                    {
                      "dial": "${HORDE_HOST}:5000"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "layer4": {
      "servers": {
        "tcp_proxy": {
          "listen": [":8080"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "proxy",
                  "upstreams": [
                    {
                      "dial": ["${HORDE_HOST}:8080"]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  }
}
